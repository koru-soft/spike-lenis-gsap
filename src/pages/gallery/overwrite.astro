<html>
  <head>
    <meta charset="UTF-8" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"
    ></script>
    <script>
      import gsap from "../../../node_modules/gsap/index.js";

      window.addEventListener("DOMContentLoaded", () => {
        document
          .querySelector("button.restart")
          ?.addEventListener("click", () => {
            gsap.fromTo(
              "button.example",
              {
                scale: 2,
              },
              {
                scale: 1,
                duration: 10,
              },
            );
          });

        document.querySelectorAll("button.example").forEach(element => {
          // 親要素に data-overwrite 属性が適用されているかで判断
          const useFlag = element.parentElement?.dataset.overwrite === "true";
          const overwrite = useFlag ? "auto" : false;

          element.addEventListener("mouseenter", () => {
            gsap.to(element, {
              scale: 1.5,
              duration: 1,
              overwrite,
            });
          });
          element.addEventListener("mouseleave", () => {
            gsap.to(element, {
              scale: 1.0,
              duration: 0.5,
              overwrite,
            });
          });
        });
      });
    </script>
    <style>
      html {
        height: 100%;
      }
      body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: #000;
        display: grid;
        place-items: center;
        color: white;
        font-family: sans-serif;
      }

      .container {
        display: flex;
        gap: 32px;
      }
      button {
        background: black;
        color: white;
        border: 1px solid white;
        padding: 8px 16px;
        cursor: pointer;
        appearance: none;
        transition:
          background 0.2s,
          color 0.2s;
      }
      button:hover {
        background: white;
        color: black;
      }
    </style>
  </head>

  <body>
    <div>
      <h1>Overwrite - false</h1>
      <div class="container">
        <button class="example">Hover Me</button>
        <button class="example">Hover Me</button>
        <button class="example">Hover Me</button>
      </div>

      <h1>Overwrite - "auto"</h1>
      <div class="container" data-overwrite="true">
        <button class="example">Hover Me</button>
        <button class="example">Hover Me</button>
        <button class="example">Hover Me</button>
      </div>
      <br /><br />
      <button class="restart">Show Motion</button>
    </div>
  </body>
</html>
