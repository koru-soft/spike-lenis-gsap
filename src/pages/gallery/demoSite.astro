        <h1 id="js-logo" class="p-header__lgoo">Design</h1>
        <button id="js-menu" type="button" class="p-header__button">
          menu
        </button>
      </div>
    </header>
    <main>
      <section class="p-mv">
        <div id="js-mv" class="p-mv__inner">
          <img
            src="https://images.unsplash.com/photo-1495232714953-ef7f41577786?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1927&q=80"
            alt=""
            class="p-mv__img"
          />
          <h2 id="js-mv-heading" class="p-mv__heading">GSAP DemoSite</h2>
        </div>
      </section>
      <div id="js-mask" class="p-mask"></div>
    </main>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN",
          "Hiragino Sans", Meiryo, sans-serif;
        font-weight: 600;
      }

      main {
        overflow: hidden;
      }

      .p-header__inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 90%;
        margin-left: auto;
        margin-right: auto;
        min-height: 10vh;
        color: #fff;
      }

      .p-header__button {
        color: #fff;
        font-size: 20px;
      }

      .p-header__logo {
        font-size: 24px;
      }

      .p-mv {
        width: 100%;
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .p-mv__inner {
        position: relative;
        width: 100%;
        height: 0;
      }

      .p-mv__img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }

      .p-mv__inner::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000;
        opacity: 0.4;
      }

      .p-mv__heading {
        position: absolute;
        top: 60%;
        left: 10%;
        color: #fff;
        font-size: 6.5vw;
        z-index: 1;
      }

      .p-mask {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(to top, #a18cd1 0%, #fbc2eb 100%);
        z-index: -1;
      }
    </style>

    <script type="module">
      import gsap from "../../node_modules/gsap/index.js";

      const mv = document.getElementById("js-mv");
      const mask = document.getElementById("js-mask");
      const logo = document.getElementById("js-logo");
      const menu = document.getElementById("js-menu");
      const mvHeading = document.getElementById("js-mv-heading");

      const tl = gsap.timeline();
      tl.to(mv, 1, {
        height: "80%",
        ease: "power2.inOut",
      })
        .to(mv, 1.2, {
          width: "80%",
          ease: "power2.inOut",
        })
        .fromTo(
          mask,
          1.2,
          {
            y: "-100%",
          },
          {
            y: "0%",
            ease: "power2.inOut",
          },
          "-=1.2",
        )
        .fromTo(
          logo,
          0.5,
          {
            opacity: 0,
            x: -30,
          },
          {
            opacity: 1,
            x: 0,
            ease: "expo.out",
          },
          "-=0.5",
        )
        .fromTo(
          menu,
          0.5,
          {
            opacity: 0,
            x: -30,
          },
          {
            opacity: 1,
            x: 0,
            ease: "expo.out",
          },
          "-=0.5",
        )
        .fromTo(
          mvHeading,
          0.5,
          {
            opacity: 0,
            x: -30,
          },
          {
            opacity: 1,
            x: 0,
            ease: "expo.out",
          },
          "-=0.5",
        );
    </script>
  </body>
